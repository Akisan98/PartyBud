<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Party_Bud.IHaveNever.IHaveNeverMenu"
             BackgroundColor="#404040"
             Title="Jeg har aldri - Meny">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Jeg har aldri..." FontSize="64" FontAttributes="Bold"  Padding="32, 32, 32, 8" TextColor="White" FontFamily="FunFont"/>
            <Label Text="Den eldste spilleren starter med et utsagn, hvis folk har gjort det drikker dem, om ingen har drikker personen som leste." FontSize="36" FontAttributes="Bold"  Padding="32, 32, 32, 48" TextColor="#54CAE3"/>
            <Button Margin="72, 16, 72, 32" Text="Start" Padding="16" CornerRadius="8" FontSize="24" FontAttributes="Bold" BackgroundColor="#397B90" TextColor="White" Clicked="Start_Game"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>