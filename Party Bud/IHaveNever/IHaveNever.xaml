        <StackLayout>
            <Label Text="Jeg har aldri..." FontSize="72" FontAttributes="Bold"  Padding="32, 8, 32, 16" TextColor="White" FontFamily="FunFont"/>

            <Grid VerticalOptions="StartAndExpand" Padding="24, 0, 24, 0">
                <BoxView Color="#397B90" CornerRadius="24"></BoxView>
                <Label x:Name="question_text" Text="ønsket å bli astronaut." Padding="32" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontSize="48" FontFamily="FunFont"/>
            </Grid>

            <Button Margin="72, 16, 72, 32" Clicked="New_Question" Text="Neste" Padding="16" CornerRadius="8" FontSize="24" FontAttributes="Bold" BackgroundColor="#397B90" TextColor="White"></Button>

        </StackLayout>
    </ContentPage.Content>
