<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Party_Bud.WhoInTheRoom2"
             BackgroundColor="#404040"
             Title="Hvem i rommet - Meny"
>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Hvem er i rommet er mest sannsynlig ..." FontSize="64" FontAttributes="Bold"  Padding="32, 32, 32, 8" TextColor="White" FontFamily="FunFont"/>
            <Label Text="Spill ved å sende rundt en objekt eller peke på personen du tror det er." FontSize="36" FontAttributes="Bold"  Padding="32, 8, 32, 16" TextColor="#54CAE3"/>
            <Button Margin="72, 16, 72, 32" Text="Start" Padding="16" CornerRadius="8" FontSize="24" FontAttributes="Bold" BackgroundColor="#397B90" TextColor="White" Clicked="Start_Game"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>