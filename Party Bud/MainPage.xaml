<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Party_Bud.MainPage"
             BackgroundColor="#404040">

    <StackLayout>
        <Label HorizontalTextAlignment="Center" FontSize="110" FontAttributes="Bold"  Padding="16" TextColor="White" FontFamily="FunFont">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Party " TextColor="#397B90"/>
                    <Span Text="Bud"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Grid VerticalOptions="StartAndExpand">
            <Image Source="main.png" Aspect="AspectFit" />
            <Label Text="> Press any button to Start" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontSize="36" FontFamily="FunFont"/>
        </Grid>

        <!-- 
