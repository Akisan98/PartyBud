<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Party_Bud.MainPage"
             BackgroundColor="#404040">

    <ScrollView>
        <StackLayout>
            <Label HorizontalTextAlignment="Center" FontSize="110" FontAttributes="Bold"  Padding="16" TextColor="White" FontFamily="FunFont">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Party " TextColor="#397B90"/>
                        <Span Text="Bud"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Grid VerticalOptions="StartAndExpand">
                <Image Source="main.png" Aspect="AspectFit" />
                <Label Text="> Press any button to Start" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontSize="36" FontFamily="FunFont"/>
            </Grid>

            <Button Margin="48, 92, 48, 8" Text="Jeg har aldri..." Padding="24" CornerRadius="8" FontSize="24" FontAttributes="Bold" BackgroundColor="#397B90" TextColor="White" Clicked="Open_Never_Have_I"></Button>
            <Button Margin="48, 8, 48, 8" Text="Hvem i rommet" Padding="24" CornerRadius="8" FontSize="24" FontAttributes="Bold" BackgroundColor="#397B90" TextColor="White" Clicked="Open_Who_In_The_Room"></Button>
            <Button Margin="48, 8, 48, 8" Text="Vil du heller?" Padding="24" CornerRadius="8" FontSize="24" FontAttributes="Bold" BackgroundColor="#397B90" TextColor="White" Clicked="Open_Would_You_Rather"></Button>
            <Button Margin="48, 8, 48, 48" Text="Nøtt eller Sannhet" Padding="24" CornerRadius="8" FontSize="24" FontAttributes="Bold" BackgroundColor="#397B90" TextColor="White" Clicked="Open_Truth_Or_Dare"></Button>

        </StackLayout>
    </ScrollView>

</ContentPage>
